@model IEnumerable<CoinTrust.Models.Trade>

@{
    ViewBag.Title = "ListTrade";
}

<h2>交易中的訂單</h2>
<h3>購買</h3>
<table class="table table-active table-bordered">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Order.Price)</th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TradeStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BuyerAddress)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.Buyer.AccountId == ViewBag.Account)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TradeStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BuyerAddress)
                </td>
                <td>
                    @Html.ActionLink("查看", "Trading", new { id = item.TradeId }, new { @class = "btn btn-success" })
                    @Html.ActionLink("取消", "Cancel", new { id = item.TradeId }, new { @class = "btn btn-danger" })

                </td>
            </tr>
        }
    }

</table>
<hr />
<h3>賣出</h3>
<table class="table table-active table-bordered">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Order.Price)</th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TradeStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BuyerAddress)
        </th>
        <th>操作</th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.Order.Seller.AccountId == ViewBag.Account)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Order.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TradeStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BuyerAddress)
                </td>
                <td>

                    @Html.ActionLink("查看", "Trading", new { id = item.TradeId }, new { @class = "btn btn-success" })
                    @Html.ActionLink("取消", "Cancel", new { id = item.TradeId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    }

</table>
