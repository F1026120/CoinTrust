<u class="text-danger h4">@ViewBag.Message</u>
<h2>我的訂單列表</h2>
<table class="table table-striped table-light">
    <tr>
        <th>訂單ID</th>
        <th>價格</th>
        <th>數量</th>
        <th>剩餘數量</th>
        <th>訂單狀態</th>
        <th>操作</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @item.OrderId
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.Quantity
            </td>
            <td>
                @item.RemainQuantity
            </td>

            @if (item.OrderStatus == CoinTrust.Models.OrderStatus.New)
            {
                <td>存在</td>
            }
            else if (item.OrderStatus == CoinTrust.Models.OrderStatus.Canceled)
            {
                <td>已取消</td>
            }
            else if (item.OrderStatus == CoinTrust.Models.OrderStatus.PartialFilled)
            {
                <td>部分已成交</td>
            }
                <td>
                    @Html.ActionLink("查看", "Details", "Orders", new { id = item.OrderId }, new { @class = "btn btn-success" })
                    @Html.ActionLink("移除", "Delete", new { id = item.OrderId }, new { @class = "btn btn-danger" })
                </td>
        </tr>
    }
</table>



