
<table class="table table-striped table-dark">
    <tr>
        <th>訂單編號</th>
        <th>單價</th>
        <th>剩餘數量</th>
        <th>最低購買數量</th>
        <th>訂單狀態</th>
        <th>操作</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @item.OrderId
            </td>
            <td>
                @item.Price
            </td>
            <td>
                @item.RemainQuantity
            </td>

            <td>
                @item.MinQuantity
            </td>

            @if (item.OrderStatus == CoinTrust.Models.OrderStatus.New)
            {
                <td>存在</td>
            }
            else if (item.OrderStatus == CoinTrust.Models.OrderStatus.Canceled)
            {
                <td>已取消</td>
            }
            <td>
                @Html.ActionLink("購買", "Trade", new { id = item.OrderId })
            </td>
        </tr>
    }
</table>
