<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 應用程式</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body style="background-image: url(/img/logo-background.png);
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-position: center;
            background-size: 500px;">
    <div class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top">
        <div class="container">
            <div class="navbar-header">
                @*<button type="button" class="navbar-toggle justify-content-end" data-toggle="collapse" data-target="#navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>*@
                @Html.ActionLink("CoinTrust", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class=" navbar-collapse collapse col">
                <ul class="nav navbar-nav nav-item">
                    <li>@Html.ActionLink("首頁", "Index", "Home", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("關於我們", "About", "Home", null, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("連絡人", "Contact", "Home", null, new { @class = "nav-link" })</li>
                </ul>
                <ul class="nav navbar-nav">
                    @if (Request.Cookies.AllKeys.Contains(FormsAuthentication.FormsCookieName))
                    {
                        <li>@Html.ActionLink("AccountInfo", "Info", "AccountInfo", null, new { @class = "nav-link" })</li>
                        <li class="dropdown">

                            <a class="btn dropdown-toggle nav-link" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Order
                                <span class="caret"></span>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="btn dropdown-item" href="/Orders/List">List Order</a>
                                <a class="btn dropdown-item" href="/Orders/CreateOrder">Create Order</a>
                            </div>

                        </li>
                        <li class="right">@Html.ActionLink("Sign Out", "SignOut", "Account", null, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        <li> @Html.ActionLink("Sign In", "SignIn", "Account", null, new { @class = "nav-link" }) </li>
                        <li> @Html.ActionLink("Sign up", "SignUp", "Account", null, new { @class = "nav-link" }) </li>
                    }


                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - CoinTrust 數位貨幣交易媒合平台</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>